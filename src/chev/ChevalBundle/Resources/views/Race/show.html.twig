{% extends 'chevChevalBundle:Race:layout.html.twig' %}
{% block title %}Voir - {{ parent() }}{% endblock %}
{% block breadcrumbs %}
{{ parent() }}
<li>
     <a href="{{ path('cheval_race_show', {id: entity.id}) }}">Aperçu</a>
</li>
{% endblock %}
{% block body %}
<h2>Voir la race</h2>
<div class="span6">
	<table class="table table-hover">
	    <tbody>
	        <tr>
	            <th>Id</th>
	            <td>{{ entity.id }}</td>
	        </tr>
	        <tr>
	            <th>Libelle</th>
	            <td>{{ entity.libelle }}</td>
	        </tr>
	        <tr>
	            <th>Centre</th>
	            <td>{{ entity.centre }}</td>
	        </tr>
	    </tbody>
	</table>
	<div class="row-fluid">
		<div class="span6">
			<form onsubmit="return confirm('{{ 'user.delete.confirm'|trans([], 'backoffice') }}')" action="{{ path('cheval_race_delete', { 'id': entity.id }) }}" method="post">
	        	{{ form_widget(delete_form) }}
	        	<button type="submit" class="btn btn-danger">Supprimer</button>
	    	</form>
		</div>
		<div class="span6 pagination-right">
			<a href="{{ path('cheval_race') }}" class="btn">Retour à la liste</a>
			<a href="{{ path('cheval_race_edit', { 'id': entity.id }) }}" class="btn btn-primary">Editer</a>
		</div>
	</div>
</div>
{% endblock %}
