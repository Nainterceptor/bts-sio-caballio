{% extends 'chevBoxBundle:Centre:layout.html.twig' %}
{% block breadcrumbs %}
{{ parent() }}
    <li><a href="{{ path('centre')}}">Index</a></li>
    <li><a href="{{ path('centre_show')}}">show</a></li>
{% endblock %}
{% block body %}
<h2>Centre</h2>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ entity.nom }}</td>
        </tr>
        <tr>
            <th>Adresse</th>
            <td>{{ entity.adresse }}</td>
        </tr>
        <tr>
            <th>Codepostal</th>
            <td>{{ entity.codePostal }}</td>
        </tr>
        <tr>
            <th>Ville</th>
            <td>{{ entity.ville }}</td>
        </tr>
        <tr>
            <th>Date</th>
            <td>{{ entity.date|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Dateajout</th>
            <td>{{ entity.dateAjout|date('Y-m-d H:i:s') }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('centre') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('centre_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('centre_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
