{% extends 'chevBoxBundle:TypeBox:layout.html.twig' %}
{% block breadcrumbs %}
    {{ parent() }}
    <li>
    	<a href="{{ path('centre_typebox_show', {id: entity.id})}}">Aperçu</a>
    </li>
{% endblock %}
{% block body %}

<div class="half-container">
	<div class="title">
		<img class="titleIcon" alt="" src="{{ asset('/images/preview.png') }}">
		<h6>Voir le Type de box</h6>
	</div>
	<table class="record_properties">
	    <tbody>
	        <tr>
	            <th>Id</th>
	            <td>{{ entity.id }}</td>
	        </tr>
	        <tr>
	            <th>Libelle</th>
	            <td>{{ entity.libelle }}</td>
	        </tr>
	        <tr>
	            <th>Taille</th>
	            <td>{{ entity.volume }} m²</td>
	        </tr>
	        <tr>
	            <th>Prix</th>
	            <td>{{ entity.prix }} € / mois</td>
	        </tr>
	        <tr>
	        	<th>Centre</th>
	        	<td>{% if entity.centre %}{{ entity.centre }}{% endif %}</td>
	        </tr>
	        <tr>
	            <th>Date d'ajout</th>
	            <td>{{ entity.dateAjout|date('Y-m-d H:i:s') }}</td>
	        </tr>
	    </tbody>
	</table>
</div>
<div class="half-container-control">
	<a href="{{ path('centre_typebox') }}" class="bouton basic">Retour à la liste</a>
	<a href="{{ path('centre_typebox_edit', { 'id': entity.id }) }}" class="bouton brownB">Editer</a>
	<form onsubmit="return confirm('{{ 'user.delete.confirm'|trans([], 'backoffice') }}')" action="{{ path('centre_typebox_delete', { 'id': entity.id }) }}" method="post">
        	{{ form_widget(delete_form) }}
        	<button type="submit" class="redB bouton">Supprimer</button>
    </form>
</div>

{% endblock %}