{% extends 'chevBoxBundle:TypeBox:layout.html.twig' %}
{% block breadcrumbs %}
    {{ parent() }}
    <li>
    	<a href="{{ path('centre_typebox_show', {id: entity.id})}}">Aperçu</a>
    </li>
{% endblock %}
{% block body %}
<h2>Types de Box</h2>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Libelle</th>
            <td>{{ entity.libelle }}</td>
        </tr>
        <tr>
            <th>Taille</th>
            <td>{{ entity.volume }} m²</td>
        </tr>
        <tr>
            <th>Prix</th>
            <td>{{ entity.prix }} / mois</td>
        </tr>
        <tr>
            <th>Date d'ajout</th>
            <td>{{ entity.dateAjout|date('Y-m-d H:i:s') }}</td>
        </tr>
    </tbody>
</table>

<ul class="form-menu float right">
	<li><a title="Retour à la liste" class="return-item" href="{{ path('centre_typebox') }}">return</a></li>
    <li><a title="Modifier" class="modif-item" href="{{ path('centre_typebox_edit', { 'id': entity.id }) }}">Modifier</a></li>
    <li>
		<form onsubmit="return confirm('{{ 'user.delete.confirm'|trans([], 'backoffice') }}')" action="{{ path('centre_typebox_delete', { 'id': entity.id }) }}" method="post">
        	{{ form_widget(delete_form) }}
        	<button type="submit" title="Supprimer" class="delete-item">+</button>
    	</form>
	</li>
</ul>
{% endblock %}