{% extends 'chevPensionBundle:Supplement:layout.html.twig' %}
{% block title %}Modifier - {{ parent() }}{% endblock %}
{% block breadcrumbs %}
{{ parent() }}
<li>
     <a href="{{ path('supplement_edit', { 'id': entity.id }) }}">Modifier</a>
</li>
{% endblock %}
{% block body %}
<h2>Modifier le supplément</h2>
<div class="span6">
	<form class="form-horizontal" action="{{ path('supplement_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
		<fieldset>
			{{ form_errors(edit_form) }}
			<div class="control-group">
				{{ form_label(edit_form.libelle, 'Libelle' , {'label_attr': {'class': 'control-label'}}) }}
				<div class="controls">
					{{ form_widget(edit_form.libelle) }}
				</div>
			</div>
			<div class="control-group">
				{{ form_label(edit_form.prix, 'Prix' , {'label_attr': {'class': 'control-label'}}) }}
				<div class="controls">
					{{ form_widget(edit_form.prix) }} €
				</div>
			</div>
			<div class="control-group">
				{{ form_label(edit_form.description, 'Description' , {'label_attr': {'class': 'control-label'}}) }}
				<div class="controls">
					{{ form_widget(edit_form.description) }}
				</div>
			</div>
			<div class="control-group">
				{{ form_label(edit_form.facture, 'Facture' , {'label_attr': {'class': 'control-label'}}) }}
				<div class="controls">
					{{ form_widget(edit_form.facture) }}
				</div>
			</div>
			
		    {{ form_rest(edit_form) }}
			<input type="submit" value="Modifier" class="btn btn-success pull-right">	
		</fieldset>
	</form>
	<div class="row-fluid">
		<div class="span6">
			<form onsubmit="return confirm('{{ 'user.delete.confirm'|trans([], 'backoffice') }}')" action="{{ path('supplement_delete', { 'id': entity.id }) }}" method="post">
		    	{{ form_widget(delete_form) }}
		    	<button type="submit" class="btn btn-danger">Supprimer</button>
			</form>
		</div>
		<div class="span6 pagination-right">
			<a href="{{ path('supplement') }}" class="btn">Retour à la liste</a>
			<a href="{{ path('supplement_show', { 'id': entity.id }) }}" class="btn btn-primary">Voir</a>
		</div>
	</div>
</div>
{% endblock %}
