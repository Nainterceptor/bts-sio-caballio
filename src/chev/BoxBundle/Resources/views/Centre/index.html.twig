{% extends 'chevBoxBundle:Centre:layout.html.twig' %}
{% block breadcrumbs %}
    {{ parent() }}
    <li><a href="{{ path('centre')}}">Index</a></li>
{% endblock %}
{% block body %}
<h2>Liste des centres</h2>

<a class="new-item" href="{{ path('centre_new') }}">+</a>

<table cellpadding="0" cellspacing="0" width="100%" class="clear">
    <thead>
        <tr>
        	<th>Id</th>
        	<th>Libelle</th>
        	<th>Gerant</th>
        	<th>Adresse</th>
        	<th>Date</th>
        	<th>Actions</th>
        </tr>
	</thead>
    <tbody>
    {% for entity in entities %}
        <tr>
			<td class="id-td"><a href="{{ path('centre_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
        	<td>{{ entity.nom }}</td>
        	<td>{{ entity.gerant }}</td>
        	<td>
        		<p>{{ entity.adresse }}</p>
				<p>{{ entity.codePostal }}</p>
            	<p>{{ entity.ville }}</p></td>
        	<td>
        		<p>Date d'ajout : {% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</p>
            	<p>Date de cr√©ation : {% if entity.dateAjout %}{{ entity.dateAjout|date('Y-m-d H:i:s') }}{% endif %}</p></td>
        	<td>
                <a title="Voir" class="show-item" href="{{ path('centre_show', { 'id': entity.id }) }}">show</a>
    			<a title="Modifier" class="modif-item" href="{{ path('centre_edit', { 'id': entity.id }) }}">Modifier</a>
            </td>
 		</tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
