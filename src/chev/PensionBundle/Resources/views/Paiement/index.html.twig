<h1>Paiement list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Datepaiement</th>
            <th>Dateencaissement</th>
            <th>Montant</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('paiement_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{% if entity.datePaiement %}{{ entity.datePaiement|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{% if entity.dateEncaissement %}{{ entity.dateEncaissement|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{{ entity.montant }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('paiement_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('paiement_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('paiement_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
