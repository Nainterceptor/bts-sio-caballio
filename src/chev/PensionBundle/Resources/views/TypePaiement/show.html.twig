{% extends 'chevPensionBundle:TypePaiement:layout.html.twig' %}
{% block title %}Voir - {{ parent() }}{% endblock %}
{% block breadcrumbs %}
{{ parent() }}
<li>
    <a href="{{ path('paiement_type_show', {id: entity.id}) }}">Aperçu</a>
</li>
{% endblock %}
{% block body %}

<div class="half-container">
	<div class="title">
		<img class="titleIcon" alt="" src="{{ asset('/images/preview.png') }}">
		<h6>Voir le type de paiement</h6>
	</div>
	<table class="record_properties">
	    <tbody>
	        <tr>
	            <th>Id</th>
	            <td>{{ entity.id }}</td>
	        </tr>
	        <tr>
	            <th>Libelle</th>
	            <td>{{ entity.libelle }}</td>
	        </tr>
	    </tbody>
	</table>
</div>
<div class="half-container-control">
	<a href="{{ path('paiement_type') }}" class="bouton basic">Retour à la liste</a>
	<a href="{{ path('paiement_type_edit', { 'id': entity.id }) }}" class="bouton brownB">Editer</a>
	<form onsubmit="return confirm('{{ 'user.delete.confirm'|trans([], 'backoffice') }}')" action="{{ path('paiement_type_delete', { 'id': entity.id }) }}" method="post">
        	{{ form_widget(delete_form) }}
        	<button type="submit" class="redB bouton">Supprimer</button>
    </form>
</div>

{% endblock %}