{% extends 'chevBoxBundle:Centre:layout.html.twig' %}
{% block title %}Modifier - {{ parent() }}{% endblock %}
{% block breadcrumbs %}
{{ parent() }}
<li>
     <a href="{{ path('centre_edit', { 'id': entity.id }) }}">Modifier</a>
</li>
{% endblock %}
{% block body %}

<div class="container">
	<div class="title">
		<img class="titleIcon" alt="" src="{{ asset('/images/list.png') }}">
		<h6>Modifier ce centre</h6>
	</div>
	<form action="{{ path('centre_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
		<fieldset>
	       	{{ form_rest(edit_form) }}
	       	<div class="form-bouton">
				<input type="submit" value="Modifier" class="bouton greenB">
			</div>
		</fieldset>
	</form>
</div>
<div class="container-control">
	<a href="{{ path('centre') }}" class="bouton basic">Retour Ã  la liste</a>
	<a href="{{ path('centre_show', { 'id': entity.id }) }}" class="bouton blueB">Voir</a>
	<form onsubmit="return confirm('{{ 'user.delete.confirm'|trans([], 'backoffice') }}')" action="{{ path('centre_delete', { 'id': entity.id }) }}" method="post">
    	{{ form_widget(delete_form) }}
    	<button type="submit" class="bouton redB">Supprimer</button>
	</form>
</div>

{% endblock %}
