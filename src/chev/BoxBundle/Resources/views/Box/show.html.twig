{% extends 'chevBoxBundle:Box:layout.html.twig' %}
{% block breadcrumbs %}
    {{ parent() }}
    <li><a href="{{ path('centre_box_edit', {id: entity.id})}}">Apperçu</a></li>
{% endblock %}
{% block body %}
<h2>Box</h2>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Date</th>
            <td>{{ entity.date|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Dateajout</th>
            <td>{{ entity.dateAjout|date('Y-m-d H:i:s') }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('centre_box') }}">
            Revenir à la liste
        </a>
    </li>
    <li>
        <a href="{{ path('centre_box_edit', { 'id': entity.id }) }}">
            <button type="submit">Modifier</button>
        </a>
    </li>
    <li>
    <form onsubmit="return confirm('{{ 'user.delete.confirm'|trans([], 'backoffice') }}')" action="{{ path('centre_box_delete', { 'id': entity.id }) }}" method="post" class="delete image form">
        {{ form_widget(delete_form) }}
        <button type="submit">Supprimer</button>
    </form>
    </li>
</ul>
{% endblock %}