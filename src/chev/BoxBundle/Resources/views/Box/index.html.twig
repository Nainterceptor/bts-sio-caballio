{% extends 'chevBoxBundle:Box:layout.html.twig' %}
{% block breadcrumbs %}
    {{ parent() }}
    <li><a href="{{ path('centre_box')}}">Index</a></li>
{% endblock %}
{% block body %}

<div class="container-control">
	<a class="bouton greenB" href="{{ path('centre_box_new') }}">Ajouter</a>
</div>

<div class="container">
	<div class="title">
		<img class="titleIcon" alt="" src="{{ asset('/images/frames.png') }}">
		<h6>Liste des Boxes</h6>
	</div>
	<table cellpadding="0" cellspacing="0" width="100%" class="clear">
	    <thead>
	        <tr>
	            <th>Id</th>
	            <th>Cheval</th>
	            <th>Type de box</th>
	            <th>Date</th>
	            <th>Date d'ajout</th>
	            <th>Actions</th>
	        </tr>
	    </thead>
	    <tbody>
	    {% for entity in entities %}
	        <tr>
	            <td class="id-td"><a href="{{ path('centre_box_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
	            <td>{% if entity.cheval %}{{ entity.cheval.nom }}{% else %}Pas de cheval{% endif %}</td>
	            <td>{{ entity.type.libelle }}</td>
	            <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
	            <td>{% if entity.dateAjout %}{{ entity.dateAjout|date('Y-m-d H:i:s') }}{% endif %}</td>
	            <td>
	                <a href="{{ path('centre_box_show', { 'id': entity.id }) }}" class="smallButton" title="Voir">
	                	<img src="{{ asset('/images/bouton/magnify.png') }}" />
	                </a>
	    			<a href="{{ path('centre_box_edit', { 'id': entity.id }) }}" class="smallButton" title="Modifier">
	    				<img src="{{ asset('/images/bouton/pencil.png') }}" />
	    			</a>
	            </td>
	        </tr>
	    {% endfor %}
	    </tbody>
	</table>
</div>

{% endblock %}
