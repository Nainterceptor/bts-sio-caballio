{% extends 'chevChevalBundle:Cheval:layout.html.twig' %}
{% block title %}Voir - {{ parent() }}{% endblock %}
{% block breadcrumbs %}
{{ parent() }}
<li>
    <a href="{{ path('cheval_show', {id: entity.id}) }}">Aperçu</a>
</li>
{% endblock %}
{% block body %}
<h2>Voir le cheval</h2>
<div class="span6">
	<table class="table table-hover">
	    <tbody>
	        <tr>
	            <th>Id</th>
	            <td>{{ entity.id }}</td>
	        </tr>
	        <tr>
	            <th>Nom</th>
	            <td>{{ entity.nom }}</td>
	        </tr>
	        <tr>
	        	<th>Race</th>
	        	<td>{% if entity.race %}{{ entity.race.libelle }} {% else %}Pas de race{% endif %}</td>
	        </tr>
	        <tr>
	        	<th>Propriétaire</th>
	        	<td>{{ entity.proprietaire }}</td>
	        </tr>
	        <tr>
	        	<th>Centre</th>
	        	<td>{{ entity.centre.nom }}</td>
	        </tr>
	        <tr>
	            <th>Date</th>
	            <td>{{ entity.date|date('d/m/Y H:i:s') }}</td>
	        </tr>
	    </tbody>
	</table>
	<div class="row-fluid">
		<div class="span6">
			<form onsubmit="return confirm('{{ 'user.delete.confirm'|trans([], 'backoffice') }}')" action="{{ path('cheval_delete', { 'id': entity.id }) }}" method="post">
	        	{{ form_widget(delete_form) }}
	        	<button type="submit" class="btn btn-danger">Supprimer</button>
	    	</form>
		</div>
		<div class="span6 pagination-right">
			<a href="{{ path('cheval') }}" class="btn">Retour à la liste</a>
			<a href="{{ path('cheval_edit', { 'id': entity.id }) }}" class="btn btn-primary">Editer</a>
		</div>
	</div>
</div>
{% endblock %}