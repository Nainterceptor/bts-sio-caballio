{% extends 'chevChevalBundle:Cheval:layout.html.twig' %}
{% block title %}Voir - {{ parent() }}{% endblock %}
{% block breadcrumbs %}
{{ parent() }}
<li class="current">
     <a href="{{ path('cheval_show', {id: entity.id}) }}">Voir</a>
</li>
{% endblock %}
{% block body %}
<div class="menu">
	<a href="{{ path('cheval') }}">
		<img style="float right" src="{{ asset('images/annuler_32x32.png') }}">
	</a>
	<a href="{{ path('cheval_edit', { 'id': entity.id }) }}">
		<img style="float right" src="{{ asset('images/editer_32x32.png') }}">
	</a>
    <form onsubmit="return confirm('{{ 'user.delete.confirm'|trans([], 'backoffice') }}')" action="{{ path('cheval_delete', { 'id': entity.id }) }}" method="post" class="delete image form">
        {{ form_widget(delete_form) }}
        <input type="image" src="{{ asset('images/supprimer_32x32.png') }}" style="float right" />
    </form>
</div>
<h2>Voir le cheval</h2>
<table width="100%" cellspacing="0" cellpadding="0" class="item-list clear">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ entity.nom }}</td>
        </tr>
        <tr>
            <th>Date</th>
            <td>{{ entity.date|date('d/m/Y H:i:s') }}</td>
        </tr>
    </tbody>
</table>

{% endblock %}