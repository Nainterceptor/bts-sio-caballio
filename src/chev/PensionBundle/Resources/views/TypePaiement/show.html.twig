{% extends 'chevPensionBundle:TypePaiement:layout.html.twig' %}
{% block title %}Voir - {{ parent() }}{% endblock %}
{% block breadcrumbs %}
{{ parent() }}
<li>
    <a href="{{ path('paiement_type_show', {id: entity.id}) }}">Aperçu</a>
</li>
{% endblock %}
{% block body %}
<h2>Voir le type de paiement</h2>
<div class="span6">
	<table class="table table-bordered">
	    <tbody>
	        <tr>
	            <th>Id</th>
	            <td>{{ entity.id }}</td>
	        </tr>
	        <tr>
	            <th>Libelle</th>
	            <td>{{ entity.libelle }}</td>
	        </tr>
	    </tbody>
	</table>
	<div class="row-fluid">
		<div class="span6">
			<form onsubmit="return confirm('{{ 'user.delete.confirm'|trans([], 'backoffice') }}')" action="{{ path('paiement_type_delete', { 'id': entity.id }) }}" method="post">
		       	{{ form_widget(delete_form) }}
		       	<button type="submit" class="btn btn-danger">Supprimer</button>
		    </form>
		</div>
		<div class="span6 pagination-right">
			<a href="{{ path('paiement_type') }}" class="btn">Retour à la liste</a>
			<a href="{{ path('paiement_type_edit', { 'id': entity.id }) }}" class="btn btn-primary">Editer</a>
		</div>
	</div>
</div>
{% endblock %}