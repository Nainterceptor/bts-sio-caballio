{% extends 'chevBoxBundle:TypeBox:layout.html.twig' %}
{% block breadcrumbs %}
    {{ parent() }}
    <li><a href="{{ path('centre_typebox')}}">Index</a></li>
{% endblock %}
{% block body %}

<div class="container-control">
	<a class="bouton greenB" href="{{ path('centre_typebox_new') }}">Ajouter</a>
</div>

<div class="container">
	<div class="title">
		<img class="titleIcon" alt="" src="{{ asset('/images/frames.png') }}">
		<h6>Liste les types de box</h6>
	</div>
	<table cellpadding="0" cellspacing="0" width="100%" class="clear">
	    <thead>
	        <tr>
	            <th>Id</th>
	            <th>Libelle</th>
	            <th>Taille</th>
	            <th>Prix</th>
	            <th>Centre</th>
	            <th>Actions</th>
	        </tr>
	    </thead>
	    <tbody>
	    {% for entity in entities %}
	        <tr>
	            <td class="id-td"><a href="{{ path('centre_typebox_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
	            <td>{{ entity.libelle }}</td>
	            <td>{{ entity.volume }} m²</td>
	            <td>{{ entity.prix }}€ / mois</td>
	            <td>{% if entity.centre %}{{ entity.centre }}{% endif %}</td>
	            <td>
	                <a href="{{ path('centre_typebox_show', { 'id': entity.id }) }}" class="smallButton" title="Voir">
	                	<img src="{{ asset('/images/bouton/magnify.png') }}" />
	                </a>
	    			<a href="{{ path('centre_typebox_edit', { 'id': entity.id }) }}" class="smallButton" title="Modifier">
	    				<img src="{{ asset('/images/bouton/pencil.png') }}" />
	    			</a>
	            </td>
	        </tr>
	    {% endfor %}
	    </tbody>
	</table>
</div>
{% endblock %}
