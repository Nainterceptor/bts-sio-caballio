{% extends 'chevChevalBundle:Equipement:layout.html.twig' %}
{% block title %}Voir - {{ parent() }}{% endblock %}
{% block breadcrumbs %}
{{ parent() }}
<li>
     <a href="{{ path('equipement_show', {id: entity.id}) }}">Aperçu</a>
</li>
{% endblock %}
{% block body %}

<div class="half-container">
	<div class="title">
		<img class="titleIcon" alt="" src="{{ asset('/images/preview.png') }}">
		<h6>Voir l'équipement</h6>
	</div>
	<table class="record_properties">
	    <tbody>
	        <tr>
	            <th>Id</th>
	            <td>{{ entity.id }}</td>
	        </tr>
	        <tr>
	            <th>Libelle</th>
	            <td>{{ entity.libelle }}</td>
	        </tr>
	        <tr>
	            <th>Propriétaire</th>
	            <td>{{ entity.proprietaire }}</td>
	        </tr>
	        <tr>
	            <th>Centre</th>
	            <td>{{ entity.centre }}</td>
	        </tr>
	        <tr>
	            <th>Date d'ajout</th>
	            <td>{{ entity.dateAjout|date('d/m/Y H:i:s') }}</td>
	        </tr>
	    </tbody>
	</table>
</div>
<div class="half-container-control">
	<a href="{{ path('equipement') }}" class="bouton basic">Retour à la liste</a>
	<a href="{{ path('equipement_edit', { 'id': entity.id }) }}" class="bouton brownB">Editer</a>
	{% if is_granted('ROLE_GERANT') %}
	<form onsubmit="return confirm('{{ 'user.delete.confirm'|trans([], 'backoffice') }}')" action="{{ path('equipement_delete', { 'id': entity.id }) }}" method="post">
        	{{ form_widget(delete_form) }}
        	<button type="submit" class="redB bouton">Supprimer</button>
    </form>
    {% endif %}
</div>

{% endblock %}