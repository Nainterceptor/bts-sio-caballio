{% extends 'chevPensionBundle:TypePaiement:layout.html.twig' %}
{% block breadcrumbs %}
{{ parent() }}
<li>
	<a href="{{ path('paiement_type')}}">Index</a>
</li>
{% endblock %}
{% block body %}
<h2>Gestion de types de paiement</h2>

<a class="new-item" href="{{ path('paiement_type_new') }}">+</a>

<table class="record_properties">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td class="id-td"><a href="{{ path('paiement_type_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.libelle }}</td>
            <td>
                <a title="Voir" class="show-item" href="{{ path('paiement_type_show', { 'id': entity.id }) }}">show</a>
    			<a title="Modifier" class="modif-item" href="{{ path('paiement_type_edit', { 'id': entity.id }) }}">Modifier</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}