{% extends 'chevChevalBundle:Cheval:layout.html.twig' %}
{% block title %}Nouveau - {{ parent() }}{% endblock %}
{% block breadcrumbs %}
{{ parent() }}
<li>
    <a href="{{ path('cheval_new') }}">Nouveau</a>
</li>
{% endblock %}
{% block body %}
<h2>Nouveau cheval</h2>
<div class="row-fluid">
	<form class="form-horizontal" action="{{ path('cheval_create') }}" method="post" {{ form_enctype(form) }}>
		{{ form_errors(form) }}
		<div class="control-group">
			{{ form_label(form.nom, 'Nom' , {'label_attr': {'class': 'control-label'}}) }}
			<div class="controls">
				{{ form_widget(form.nom) }}
			</div>
		</div>
		<div class="control-group">
			{{ form_label(form.sexe, 'Sexe' , {'label_attr': {'class': 'control-label'}}) }}
			<div class="controls">
				{{ form_widget(form.sexe) }}
			</div>
		</div>
		<div class="control-group">
			{{ form_label(form.nourriture, 'Aliment' , {'label_attr': {'class': 'control-label'}}) }}
			<div class="controls">
				{{ form_widget(form.nourriture) }} | {{ form_widget(form.quantite) }} Quantité (Kg/Jours)
			</div>
		</div>
		<div class="control-group">
			{{ form_label(form.proprietaire, 'Propriétaire' , {'label_attr': {'class': 'control-label'}}) }}
			<div class="controls">
				{{ form_widget(form.proprietaire) }}
			</div>
		</div>
		<div class="control-group">
			{{ form_label(form.description, 'Description' , {'label_attr': {'class': 'control-label'}}) }}
			<div class="controls">
				{{ form_widget(form.description) }}
			</div>
		</div>
		<div class="control-group">
			{{ form_label(form.centre, 'Centre' , {'label_attr': {'class': 'control-label'}}) }}
			<div class="controls">
				{{ form_widget(form.centre) }}
			</div>
		</div>
		<div class="control-group">
			{{ form_label(form.box, 'Box' , {'label_attr': {'class': 'control-label'}}) }}
			<div class="controls">
				{{ form_widget(form.box) }}
			</div>
		</div>
		<div class="control-group">
			{{ form_label(form.pature, 'Pature' , {'label_attr': {'class': 'control-label'}}) }}
			<div class="controls">
				{{ form_widget(form.pature) }}
			</div>
		</div>
		{{ form_rest(form) }}
		<div class="pagination-right">
		    <a class="btn" href="{{ path('cheval') }}">Retour à la liste</a>
			<input class="btn btn-success" type="submit" value="Nouveau" >
		</div>
	</form>
</div>
{% endblock %}