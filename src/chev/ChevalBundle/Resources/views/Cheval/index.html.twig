{% extends 'chevChevalBundle:Cheval:layout.html.twig' %}
{% block breadcrumbs %}
    {{ parent() }}
    <li><a href="{{ path('cheval')}}">Index</a></li>
{% endblock %}
{% block body %}
<h2>Gestion de chevaux</h2>
<ul class="float right">
    <li>
    	<a title="Nouveau" href="{{ path('cheval_new') }}">
    		<img title="Nouveau" src="{{ asset('images/new_32x32.png') }}">
    	</a>
    </li>
</ul>
<table cellpadding="0" cellspacing="0" width="100%" class="item-list clear">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('cheval_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.nom }}</td>
            <td>{% if entity.date %}{{ entity.date|date('d/m/Y H:i:s') }}{% endif %}</td>
		            <td>
		            	<a title="Edit" href="{{ path('cheval_edit', { 'id': entity.id }) }}">
		            		<img alt="Edit" src="{{ asset('images/editer_32x32.png') }}">
		            	</a>
		            	<a title="Show" href="{{ path('cheval_show', { 'id': entity.id }) }}">
		            		<img alt="Show" src="{{ asset('images/voir_32x32.png') }}">
		            	</a>
		            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}