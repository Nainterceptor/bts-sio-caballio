{% extends 'chevChevalBundle:Equipement:layout.html.twig' %}
{% block breadcrumbs %}
{{ parent() }}
<li>
	<a href="{{ path('equipement')}}">Index</a>
</li>
{% endblock %}
{% block body %}

{% if is_granted('ROLE_GERANT') %}
<div class="container-control">
	<a class="bouton greenB" href="{{ path('equipement_new') }}">Ajouter</a>
</div>
{% endif %}
<div class="container">
	<div class="title">
		<img class="titleIcon" alt="" src="{{ asset('/images/frames.png') }}">
		<h6>Liste des équipements</h6>
	</div>
	<table cellpadding="0" cellspacing="0" width="100%" class="clear">
	    <thead>
	        <tr>
	            <th>Id</th>
	            <th>Libelle</th>
	            <th>Propriétaire</th>
	            <th>Centre</th>
	            <th>Date d'ajout</th>
	            <th>Actions</th>
	        </tr>
	    </thead>
	    <tbody>
	    {% for entity in entities %}
	        <tr>
	            <td class="id-td"><a href="{{ path('equipement_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
	            <td>{{ entity.libelle }}</td>
	            <td>{{ entity.proprietaire }}</td>
	            <td>{{ entity.centre }}</td>
	            <td>{% if entity.dateAjout %}{{ entity.dateAjout|date('d/m/Y H:i:s') }}{% endif %}</td>
	            <td>
	                <a href="{{ path('equipement_show', { 'id': entity.id }) }}" class="smallButton" title="Voir">
	                	<img src="{{ asset('/images/bouton/magnify.png') }}" />
	                </a>
	                {% if is_granted('ROLE_GERANT') %}
	    			<a href="{{ path('equipement_edit', { 'id': entity.id }) }}" class="smallButton" title="Modifier">
	    				<img src="{{ asset('/images/bouton/pencil.png') }}" />
	    			</a>
	    			{% endif %}
	            </td>
	        </tr>
	    {% endfor %}
	    </tbody>
	</table>
</div>
{% endblock %}