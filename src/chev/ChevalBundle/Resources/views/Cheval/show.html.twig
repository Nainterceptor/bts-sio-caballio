{% extends 'chevChevalBundle:Cheval:layout.html.twig' %}
{% block title %}Voir - {{ parent() }}{% endblock %}
{% block breadcrumbs %}
{{ parent() }}
<li>
     <a href="{{ path('cheval_show', {id: entity.id}) }}">Aperçu</a>
</li>
{% endblock %}
{% block body %}

<div class="half-container">
	<div class="title">
		<img class="titleIcon" alt="" src="{{ asset('/images/preview.png') }}">
		<h6>Voir le cheval</h6>
	</div>
	<table class="record_properties">
	    <tbody>
	        <tr>
	            <th>Id</th>
	            <td>{{ entity.id }}</td>
	        </tr>
	        <tr>
	            <th>Nom</th>
	            <td>{{ entity.nom }}</td>
	        </tr>
	        <tr>
	        	<th>Race</th>
	        	<td>{% if entity.race %}{{ entity.race.libelle }} {% else %}Pas de race{% endif %}</td>
	        </tr>
	        <tr>
	        	<th>Propriétaire</th>
	        	<td>{{ entity.proprietaire }}</td>
	        </tr>
	        <tr>
	        	<th>Centre</th>
	        	<td>{{ entity.centre.nom }}</td>
	        </tr>
	        <tr>
	            <th>Date</th>
	            <td>{{ entity.date|date('d/m/Y H:i:s') }}</td>
	        </tr>
	    </tbody>
	</table>
</div>
<div class="half-container-control">
	<a href="{{ path('cheval') }}" class="bouton basic">Retour à la liste</a>
	<a href="{{ path('cheval_edit', { 'id': entity.id }) }}" class="bouton brownB">Editer</a>
	{% if is_granted('ROLE_GERANT') %}
	<form onsubmit="return confirm('{{ 'user.delete.confirm'|trans([], 'backoffice') }}')" action="{{ path('cheval_delete', { 'id': entity.id }) }}" method="post">
        	{{ form_widget(delete_form) }}
        	<button type="submit" class="redB bouton">Supprimer</button>
    </form>
    {% endif %}
</div>
{% endblock %}