{% extends 'chevBoxBundle:Centre:layout.html.twig' %}
{% block breadcrumbs %}
{{ parent() }}
<li>
	<a href="{{ path('centre')}}">Index</a>
</li>
{% endblock %}
{% block body %}

{% if is_granted('ROLE_ADMIN') %}
<div class="container-control">
	<a class="bouton greenB" href="{{ path('centre_new') }}">Ajouter</a>
</div>
{% endif %}
<div class="container">
	<div class="title">
		<img class="titleIcon" alt="" src="{{ asset('/images/frames.png') }}">
		<h6>Liste des centres</h6>
	</div>
	<table class="record_properties">
	    <thead>
	        <tr>
	        	<th>Id</th>
	        	<th>Libelle</th>
	        	<th>Gerant</th>
	        	<th>Adresse</th>
	        	<th>Date</th>
	        	<th>Actions</th>
	        </tr>
		</thead>
	    <tbody>
	    {% for entity in entities %}
	        <tr>
				<td class="id-td"><a href="{{ path('centre_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
	        	<td>{{ entity.nom }}</td>
	        	<td>{{ entity.gerant }}</td>
	        	<td>
	        		<p>{{ entity.adresse }}</p>
					<p>{{ entity.codePostal }}</p>
	            	<p>{{ entity.ville }}</p></td>
	        	<td>
	        		<p>Date d'ajout : {% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</p>
	            	<p>Date de cr√©ation : {% if entity.dateAjout %}{{ entity.dateAjout|date('Y-m-d H:i:s') }}{% endif %}</p>
	            </td>
	            <td>
	                <a href="{{ path('centre_show', { 'id': entity.id }) }}" class="smallButton" title="Voir">
	                	<img src="{{ asset('/images/bouton/magnify.png') }}" />
	                </a>
	    			<a href="{{ path('centre_edit', { 'id': entity.id }) }}" class="smallButton" title="Modifier">
	    				<img src="{{ asset('/images/bouton/pencil.png') }}" />
	    			</a>
	            </td>
	 		</tr>
	    {% endfor %}
	    </tbody>
	</table>
</div>

{% endblock %}
