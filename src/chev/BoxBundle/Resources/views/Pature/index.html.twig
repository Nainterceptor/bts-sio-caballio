{% extends 'chevBoxBundle:Pature:layout.html.twig' %}
{% block breadcrumbs %}
{{ parent() }}
<li>
	<a href="{{ path('pature')}}">Index</a>
</li>
{% endblock %}
{% block body %}

<div class="container-control">
	<a class="bouton greenB" href="{{ path('pature_new') }}">Ajouter</a>
</div>

<div class="container">
	<div class="title">
		<img class="titleIcon" alt="" src="{{ asset('/images/frames.png') }}">
		<h6>Liste des patûres</h6>
	</div>
	<table class="record_properties">
	    <thead>
	        <tr>
	        	<th>Id</th>
	        	<th>Libelle</th>
	        	<th>Taille</th>
	        	<th>Centre</th>
	        	<th>Utilisé</th>
	        	<th>Date d'ajout</th>
	        	<th>Actions</th>
	        </tr>
		</thead>
	    <tbody>
	    {% for entity in entities %}
	        <tr>
				<td class="id-td"><a href="{{ path('pature_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
	        	<td>{{ entity.libelle }}</td>
	        	<td>{{ entity.taille }} hectare</td>
	        	<td>{{ entity.centre }}</td>
			    <td>{% if entity.utilise %}oui{% else %}non{% endif %}</td>
	            <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
	        	<td>
	                <a href="{{ path('pature_show', { 'id': entity.id }) }}" class="smallButton" title="Voir">
	                	<img src="{{ asset('/images/bouton/magnify.png') }}" />
	                </a>
	    			<a href="{{ path('pature_edit', { 'id': entity.id }) }}" class="smallButton" title="Modifier">
	    				<img src="{{ asset('/images/bouton/pencil.png') }}" />
	    			</a>
	            </td>
	 		</tr>
	    {% endfor %}
	    </tbody>
	</table>
</div>
{% endblock %}
