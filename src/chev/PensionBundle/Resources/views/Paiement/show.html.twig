{% extends 'chevPensionBundle:Paiement:layout.html.twig' %}
{% block title %}Voir - {{ parent() }}{% endblock %}
{% block breadcrumbs %}
{{ parent() }}
<li>
	<a href="{{ path('paiement_show', {id: entity.id}) }}">Aperçu</a>
</li>
{% endblock %}
{% block body %}

<div class="half-container">
	<div class="title">
		<img class="titleIcon" alt="" src="{{ asset('/images/preview.png') }}">
		<h6>Voir le paiement</h6>
	</div>
	<table class="record_properties">
	    <tbody>
	        <tr>
	            <th>Id</th>
	            <td>{{ entity.id }}</td>
	        </tr>
	        <tr>
	            <th>Date paiement</th>
	            <td>{{ entity.datePaiement|date('d/m/Y H:i:s') }}</td>
	        </tr>
	        <tr>
	            <th>Date encaissement</th>
	            <td>{{ entity.dateEncaissement|date('d/m/Y H:i:s') }}</td>
	        </tr>
	        <tr>
	            <th>Montant</th>
	            <td>{{ entity.montant }} €</td>
	        </tr>
	    </tbody>
	</table>
</div>
<div class="half-container-control">
	<a href="{{ path('paiement') }}" class="bouton basic">Retour à la liste</a>
	<a href="{{ path('paiement_edit', { 'id': entity.id }) }}" class="bouton brownB">Editer</a>
	<form onsubmit="return confirm('{{ 'user.delete.confirm'|trans([], 'backoffice') }}')" action="{{ path('paiement_delete', { 'id': entity.id }) }}" method="post">
        	{{ form_widget(delete_form) }}
        	<button type="submit" class="redB bouton">Supprimer</button>
    </form>
</div>

{% endblock %}