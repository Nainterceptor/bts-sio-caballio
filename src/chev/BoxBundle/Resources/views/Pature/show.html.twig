{% extends 'chevBoxBundle:Pature:layout.html.twig' %}
{% block title %}Voir - {{ parent() }}{% endblock %}
{% block breadcrumbs %}
{{ parent() }}
<li>
    <a href="{{ path('pature_show', {id: entity.id}) }}">Aperçu</a>
</li>
{% endblock %}
{% block body %}

<h2>Voir la patûre</h2>
<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ entity.libelle }}</td>
        </tr>
        <tr>
            <th>Taille</th>
            <td>{{ entity.taille }} hectare(s)</td>
        </tr>
        <tr>
            <th>Centre</th>
            <td>{{ entity.centre }}</td>
        </tr>
        <tr>
            <th>Utilisé</th>
            <td>{% if entity.utilise %}oui{% else %}non{% endif %}</td>
        </tr>
        <tr>
            <th>Date</th>
            <td>{{ entity.date|date('Y-m-d H:i:s') }}</td>
        </tr>
    </tbody>
</table>

<ul class="form-menu float right">
	<li><a title="Retour à la liste" class="return-item" href="{{ path('pature') }}">Revenir à la liste</a></li>
    <li><a title="Modifier" class="modif-item" href="{{ path('pature_edit', { 'id': entity.id }) }}">Modifier</a></li>
    <li>
		<form onsubmit="return confirm('{{ 'user.delete.confirm'|trans([], 'backoffice') }}')" action="{{ path('pature_delete', { 'id': entity.id }) }}" method="post">
        	{{ form_widget(delete_form) }}
        	<button type="submit" title="Supprimer" class="delete-item">+</button>
    	</form>
	</li>
</ul>
{% endblock %}
