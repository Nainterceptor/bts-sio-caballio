{% extends 'chevBoxBundle:Pature:layout.html.twig' %}
{% block breadcrumbs %}
{{ parent() }}
<li>
	<a href="{{ path('pature')}}">Index</a>
</li>
{% endblock %}
{% block body %}
<h2>Liste des patures</h2>

	<a class="new-item" href="{{ path('pature_new') }}">+</a>

<table class="record_properties">
    <thead>
        <tr>
        	<th>Id</th>
        	<th>Libelle</th>
        	<th>Taille</th>
        	<th>Centre</th>
        	<th>Utilis√©</th>
        	<th>Date d'ajout</th>
        </tr>
	</thead>
    <tbody>
    {% for entity in entities %}
        <tr>
			<td class="id-td"><a href="{{ path('pature_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
        	<td>{{ entity.libelle }}</td>
        	<td>{{ entity.taille }} hectare</td>
        	<td>{{ entity.centre }}</td>
		    <td>{% if entity.utilise %}oui{% else %}non{% endif %}</td>
            <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
        	<td>
                <a title="Voir" class="show-item" href="{{ path('pature_show', { 'id': entity.id }) }}">Voir</a>
    			<a title="Modifier" class="modif-item" href="{{ path('pature_edit', { 'id': entity.id }) }}">Modifier</a>
            </td>
 		</tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
