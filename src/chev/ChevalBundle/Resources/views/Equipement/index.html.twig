{% extends 'chevChevalBundle:Equipement:layout.html.twig' %}
{% block breadcrumbs %}
{{ parent() }}
<li>
	<a href="{{ path('equipement')}}">Index</a>
</li>
{% endblock %}
{% block body %}
<h2>Gestion de l'équipement</h2>
{% if is_granted('ROLE_GERANT') %}
<a class="new-item" href="{{ path('equipement_new') }}">+</a>
{% endif %}
<table cellpadding="0" cellspacing="0" width="100%" class="clear">
    <thead>
        <tr>
            <th>Id</th>
            <th>Libelle</th>
            <th>Propriétaire</th>
            <th>Centre</th>
            <th>Date d'ajout</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td class="id-td"><a href="{{ path('equipement_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.libelle }}</td>
            <td>{{ entity.proprietaire }}</td>
            <td>{{ entity.centre }}</td>
            <td>{% if entity.dateAjout %}{{ entity.dateAjout|date('d/m/Y H:i:s') }}{% endif %}</td>
            <td>
                <a title="Voir" class="show-item" href="{{ path('equipement_show', { 'id': entity.id }) }}">Voir</a>
                {% if is_granted('ROLE_GERANT') %}
    			<a title="Modifier" class="modif-item" href="{{ path('equipement_edit', { 'id': entity.id }) }}">Modifier</a>
    			{% endif %}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}