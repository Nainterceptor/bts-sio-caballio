{% extends 'chevPensionBundle:Paiement:layout.html.twig' %}
{% block title %}Voir - {{ parent() }}{% endblock %}
{% block breadcrumbs %}
{{ parent() }}
<li>
	<a href="{{ path('paiement_show', {id: entity.id}) }}">Aperçu</a>
</li>
{% endblock %}
{% block body %}

<h2>Voir le paiement</h2>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Date paiement</th>
            <td>{{ entity.datePaiement|date('d/m/Y H:i:s') }}</td>
        </tr>
        <tr>
            <th>Date encaissement</th>
            <td>{{ entity.dateEncaissement|date('d/m/Y H:i:s') }}</td>
        </tr>
        <tr>
            <th>Montant</th>
            <td>{{ entity.montant }} €</td>
        </tr>
    </tbody>
</table>

<ul class="form-menu float right">
	<li><a title="Retour à la liste" class="return-item" href="{{ path('paiement') }}">return</a></li>
    <li><a title="Modifier" class="modif-item" href="{{ path('paiement_edit', { 'id': entity.id }) }}">Modifier</a></li>
    <li>
		<form onsubmit="return confirm('{{ 'user.delete.confirm'|trans([], 'backoffice') }}')" action="{{ path('paiement_delete', { 'id': entity.id }) }}" method="post">
        	{{ form_widget(delete_form) }}
        	<button type="submit" title="Supprimer" class="delete-item">+</button>
    	</form>
	</li>
</ul>
{% endblock %}