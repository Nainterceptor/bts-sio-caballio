{% extends 'chevPensionBundle:Facture:layout.html.twig' %}
{% block title %}Modifier - {{ parent() }}{% endblock %}
{% block breadcrumbs %}
{{ parent() }}
<li>
     <a href="{{ path('facture_edit', { 'id': entity.id }) }}">Modifier</a>
</li>
{% endblock %}
{% block body %}
<ul class="form-menu">
	<li><a title="Retour Ã  la liste" class="return-item" href="{{ path('facture') }}">return</a></li>
	<li><a title="Voir" class="show-item" href="{{ path('facture_show', { 'id': entity.id }) }}">show</a></li>
	<li>
		<form onsubmit="return confirm('{{ 'user.delete.confirm'|trans([], 'backoffice') }}')" action="{{ path('facture_delete', { 'id': entity.id }) }}" method="post">
        	{{ form_widget(delete_form) }}
        	<button type="submit" title="Supprimer" class="delete-item">+</button>
    	</form>
	</li>
</ul>
<form action="{{ path('facture_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
	<fieldset>
        <h2>Modifier les factures</h2>
        <div>
		    {{ form_label(edit_form.dateDebut) }}
		    {{ form_widget(edit_form.dateDebut) }}
		    {{ form_errors(edit_form.dateDebut) }}
		</div>
		<div>
		    {{ form_label(edit_form.dateFin) }}
		    {{ form_widget(edit_form.dateFin) }}
		    {{ form_errors(edit_form.dateFin) }}
		</div>
		<div>
		    {{ form_label(edit_form.dateFacture) }}
		    {{ form_widget(edit_form.dateFacture) }}
		    {{ form_errors(edit_form.dateFacture) }}
		</div>
		<div>
		    {{ form_label(edit_form.cheval) }}
		    {{ form_widget(edit_form.cheval) }}
		    {{ form_errors(edit_form.cheval) }}
		</div>
		<div>
		    {{ form_label(edit_form.box) }}
		    {{ form_widget(edit_form.box) }}
		    {{ form_errors(edit_form.box) }}
		</div>
		<div>
		    {{ form_label(edit_form.utilisateur) }}
		    {{ form_widget(edit_form.utilisateur) }}
		    {{ form_errors(edit_form.utilisateur) }}
		</div>
		<input class="float right" title="Confirmer la modification" type="submit" value="Modifier">
	</fieldset>
</form>
{% endblock %}