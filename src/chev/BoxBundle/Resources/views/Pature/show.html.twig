{% extends 'chevBoxBundle:Pature:layout.html.twig' %}
{% block title %}Voir - {{ parent() }}{% endblock %}
{% block breadcrumbs %}
{{ parent() }}
<li>
    <a href="{{ path('pature_show', {id: entity.id}) }}">Aperçu</a>
</li>
{% endblock %}
{% block body %}
<h2>Voir la pâture</h2>
<div class="span6">
	<table class="table table-bordered">
	    <tbody>
	        <tr>
	            <th>Id</th>
	            <td>{{ entity.id }}</td>
	        </tr>
	        <tr>
	            <th>Nom</th>
	            <td>{{ entity.libelle }}</td>
	        </tr>
	        <tr>
	            <th>Taille</th>
	            <td>{{ entity.taille }} hectare(s)</td>
	        </tr>
	        <tr>
	            <th>Centre</th>
	            <td>{{ entity.centre }}</td>
	        </tr>
	        <tr>
	            <th>Utilisé</th>
	            <td>{% if entity.utilise %}oui{% else %}non{% endif %}</td>
	        </tr>
	        <tr>
	            <th>Date d'ajout</th>
	            <td>{{ entity.date|date('d/m/Y') }}</td>
	        </tr>
	    </tbody>
	</table>
	<div class="row-fluid">
		<div class="span6">
			<form onsubmit="return confirm('{{ 'user.delete.confirm'|trans([], 'backoffice') }}')" action="{{ path('pature_delete', { 'id': entity.id }) }}" method="post">
		       	{{ form_widget(delete_form) }}
		        <button type="submit" class="btn btn-danger">Supprimer</button>
		    </form>
		</div>
		<div class="span6 pagination-right">
			<a href="{{ path('pature') }}" class="btn">Retour à la liste</a>
			<a href="{{ path('pature_edit', { 'id': entity.id }) }}" class="btn btn-primary">Editer</a>
		</div>
	</div>
</div>
{% endblock %}
