{% extends 'chevChevalBundle:Equipement:layout.html.twig' %}
{% block title %}Modifier - {{ parent() }}{% endblock %}
{% block breadcrumbs %}
{{ parent() }}
<li>
     <a href="{{ path('equipement', { 'id': entity.id }) }}">Modifier</a>
</li>
{% endblock %}
{% block body %}
<ul class="form-menu">
	<li><a title="Retour à la liste" class="return-item" href="{{ path('equipement') }}">Revenir à la liste</a></li>
	<li><a title="Voir" class="show-item" href="{{ path('equipement_show', { 'id': entity.id }) }}">Voir</a></li>
	<li>
		<form onsubmit="return confirm('{{ 'user.delete.confirm'|trans([], 'backoffice') }}')" action="{{ path('equipement_delete', { 'id': entity.id }) }}" method="post">
        	{{ form_widget(delete_form) }}
        	<button type="submit" title="Supprimer" class="delete-item">+</button>
    	</form>
	</li>
</ul>
<form action="{{ path('equipement_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
	<fieldset>
        <h2>Modifier cet équipement</h2>
        {{ form_rest(edit_form) }}
		<input class="float right" title="Confirmer la modification" type="submit" value="Modifier">
	</fieldset>
</form>
{% endblock %}
