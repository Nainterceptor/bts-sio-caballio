{% extends 'chevPensionBundle:Paiement:layout.html.twig' %}
{% block breadcrumbs %}
{{ parent() }}
<li>
	<a href="{{ path('paiement')}}">Index</a>
</li>
{% endblock %}
{% block body %}
<h2>Gestion des paiements</h2>

<a class="new-item" href="{{ path('paiement_new') }}">+</a>

<table class="record_properties">
    <thead>
        <tr>
            <th>Id</th>
            <th>Date de paiement</th>
            <th>Date d'encaissement</th>
            <th>Montant</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td class="id-td"><a href="{{ path('paiement_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{% if entity.datePaiement %}{{ entity.datePaiement|date('d/m/Y H:i:s') }}{% endif %}</td>
            <td>{% if entity.dateEncaissement %}{{ entity.dateEncaissement|date('d/m/Y H:i:s') }}{% endif %}</td>
            <td>{{ entity.montant }} â‚¬</td>
            <td>
                <a title="Voir" class="show-item" href="{{ path('paiement_show', { 'id': entity.id }) }}">show</a>
    			<a title="Modifier" class="modif-item" href="{{ path('paiement_edit', { 'id': entity.id }) }}">Modifier</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}