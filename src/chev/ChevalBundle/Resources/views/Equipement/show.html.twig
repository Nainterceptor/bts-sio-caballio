{% extends 'chevChevalBundle:Equipement:layout.html.twig' %}
{% block title %}Voir - {{ parent() }}{% endblock %}
{% block breadcrumbs %}
{{ parent() }}
<li>
     <a href="{{ path('equipement_show', {id: entity.id}) }}">Aperçu</a>
</li>
{% endblock %}
{% block body %}
<h2>Voir l'équipement</h2>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Libelle</th>
            <td>{{ entity.libelle }}</td>
        </tr>
        <tr>
            <th>Propriétaire</th>
            <td>{{ entity.proprietaire }}</td>
        </tr>
        <tr>
            <th>Centre</th>
            <td>{{ entity.centre }}</td>
        </tr>
        <tr>
            <th>Date d'ajout</th>
            <td>{{ entity.dateAjout|date('d/m/Y H:i:s') }}</td>
        </tr>
    </tbody>
</table>

<ul class="form-menu float right">
	<li><a title="Retour à la liste" class="return-item" href="{{ path('equipement') }}">Revenir à la liste</a></li>
	{% if is_granted('ROLE_GERANT') %}
    <li><a title="Modifier" class="modif-item" href="{{ path('equipement_edit', { 'id': entity.id }) }}">Modifier</a></li>
    <li>
		<form onsubmit="return confirm('{{ 'user.delete.confirm'|trans([], 'backoffice') }}')" action="{{ path('equipement_delete', { 'id': entity.id }) }}" method="post">
        	{{ form_widget(delete_form) }}
        	<button type="submit" title="Supprimer" class="delete-item">+</button>
    	</form>
	</li>
	{% endif %}
</ul>
{% endblock %}