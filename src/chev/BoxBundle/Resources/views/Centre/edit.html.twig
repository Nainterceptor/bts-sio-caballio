{% extends 'chevBoxBundle:Centre:layout.html.twig' %}
{% block title %}Modifier - {{ parent() }}{% endblock %}
{% block breadcrumbs %}
{{ parent() }}
<li>
     <a href="{{ path('centre_edit', { 'id': entity.id }) }}">Modifier</a>
</li>
{% endblock %}
{% block body %}
<ul class="form-menu">
	<li><a title="Retour Ã  la liste" class="return-item" href="{{ path('centre') }}">return</a></li>
	<li><a title="Voir" class="show-item" href="{{ path('centre_show', { 'id': entity.id }) }}">show</a></li>
	<li>
		<form onsubmit="return confirm('{{ 'user.delete.confirm'|trans([], 'backoffice') }}')" action="{{ path('centre_delete', { 'id': entity.id }) }}" method="post">
        	{{ form_widget(delete_form) }}
        	<button type="submit" title="Supprimer" class="delete-item">+</button>
    	</form>
	</li>
</ul>
<form action="{{ path('centre_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
	<fieldset>
        <h2>Modifier ce centre</h2>
       	{{ form_rest(edit_form) }}
		<input class="float right" title="Confirmer la modification" type="submit" value="Modifier">
	</fieldset>
</form>
{% endblock %}
