{% extends 'chevPensionBundle:Facture:layout.html.twig' %}
{% block breadcrumbs %}
{{ parent() }}
<li>
	<a href="{{ path('facture')}}">Index</a>
</li>
{% endblock %}
{% block body %}

<div class="container-control">
	<a class="bouton greenB" href="{{ path('facture_new') }}">Ajouter</a>
</div>

<div class="container">
	<div class="title">
		<img class="titleIcon" alt="" src="{{ asset('/images/frames.png') }}">
		<h6>Liste des factures</h6>
	</div>
	<table class="record_properties">
	    <thead>
	        <tr>
	            <th>Id</th>
	            <th>Client</th>
	            <th>Box</th>
	            <th>Cheval</th>
	            <th>Date</th>
	            <th>Actions</th>
	        </tr>
	    </thead>
	    <tbody>
	    {% for entity in entities %}
	        <tr>
	            <td class="id-td"><a href="{{ path('facture_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
	            <td>{{ entity.utilisateur }}</td>
	            <td>{{ entity.box }}</td>
	            <td>{{ entity.box.cheval }}</td>
	            <td>
	            	{% if entity.dateDebut %}<p>Date de debut : {{ entity.dateDebut|date('Y-m-d H:i:s') }}</p>{% endif %}
	            	{% if entity.dateFin %}<p>Date de fin : {{ entity.dateFin|date('Y-m-d H:i:s') }}</p>{% endif %}
	            	{% if entity.dateFacture %}<p>Date d'ajout : {{ entity.dateFacture|date('Y-m-d H:i:s') }}</p>{% endif %}
	            </td>
	            <td>
	                <a href="{{ path('facture_show', { 'id': entity.id }) }}" class="smallButton" title="Voir">
	                	<img src="{{ asset('/images/bouton/magnify.png') }}" />
	                </a>
	                {% if is_granted('ROLE_GERANT') %}
	    			<a href="{{ path('facture_edit', { 'id': entity.id }) }}" class="smallButton" title="Modifier">
	    				<img src="{{ asset('/images/bouton/pencil.png') }}" />
	    			</a>
	    			{% endif %}
	            </td>
	        </tr>
	    {% endfor %}
	    </tbody>
	</table>
</div>
{% endblock %}

