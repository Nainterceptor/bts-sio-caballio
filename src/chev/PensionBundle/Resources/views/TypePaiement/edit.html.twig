{% extends 'chevPensionBundle:TypePaiement:layout.html.twig' %}
{% block title %}Modifier - {{ parent() }}{% endblock %}
{% block breadcrumbs %}
{{ parent() }}
<li>
	<a href="{{ path('paiement_type_edit', { 'id': entity.id }) }}">Modifier</a>
</li>
{% endblock %}
{% block body %}
<h2>Modifier le type de paiement</h2>
<div class="6">
	<form action="{{ path('paiement_type_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
		<fieldset>
	       	{{ form_rest(edit_form) }}
			<input type="submit" value="Modifier" class="btn btn-success">
		</fieldset>
	</form>
</div>
<div class="container-control">
	<a href="{{ path('paiement_type') }}" class="bouton basic">Retour Ã  la liste</a>
	<a href="{{ path('paiement_type_show', { 'id': entity.id }) }}" class="bouton blueB">Voir</a>
	<form onsubmit="return confirm('{{ 'user.delete.confirm'|trans([], 'backoffice') }}')" action="{{ path('paiement_type_delete', { 'id': entity.id }) }}" method="post">
    	{{ form_widget(delete_form) }}
    	<button type="submit" class="bouton redB">Supprimer</button>
	</form>
</div>

{% endblock %}