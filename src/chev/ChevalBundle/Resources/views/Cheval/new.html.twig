{% extends 'chevChevalBundle:Cheval:layout.html.twig' %}
{% block title %}Nouveau - {{ parent() }}{% endblock %}
{% block breadcrumbs %}
{{ parent() }}
<li class="current">
     <a href="{{ path('cheval_new') }}">Nouveau</a>
</li>
{% endblock %}
{% block body %}
<form action="{{ path('cheval_create') }}" method="post" {{ form_enctype(form) }}>
	<fieldset>
        <h2>Nouveau cheval</h2>
       {{ form_rest(form) }}
		<input class="float right" type="submit" value="Nouveau">
    	<a title="Retourner à la liste" href="{{ path('cheval') }}">
    		<img class="float right" src="{{ asset('images/annuler_32x32.png') }}" alt="Retourner à la liste">
    	</a>
	</fieldset>
</form>
{% endblock %}